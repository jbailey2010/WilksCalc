<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#449def" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="12dp"
                android:top="6dp"
                android:right="12dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#2063a9"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="13dp"
                android:top="7dp"
                android:right="13dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>